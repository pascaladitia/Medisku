<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.main.fragment.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bgg_button2"
        android:elevation="18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:outlineProvider="paddedBounds"
        android:outlineSpotShadowColor="@color/black60"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/text_gilroy_content3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bgg_button"
            android:backgroundTint="@color/accent"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:text="Profile Saya"
            android:textColor="@color/blue_dark" />

        <TextView
            style="@style/text_gilroy_subContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="@color/accent"
            android:text="Pengaturan"
            android:textColor="@color/blue_dark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bgg_edt"
        android:elevation="18dp"
        android:outlineProvider="paddedBounds"
        android:outlineSpotShadowColor="@color/black60"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout20">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_card3"/>

        <TextView
            style="@style/text_gilroy_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="18dp"
            android:textColor="@color/blue_dark"
            android:text="Pilih data yang ingin ditampilkan" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="18dp"
                android:background="@drawable/bgg_button2"
                android:backgroundTint="@color/accent"
                android:padding="8dp"
                android:src="@drawable/ic_contact"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                style="@style/text_gilroy_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Data Diri"
                android:textColor="@color/blue_dark"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView13"
                style="@style/text_gilroy_subContent3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Data diri anda sesuai KTP"
                android:textColor="@color/gray"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/bgg_button2"
                android:backgroundTint="@color/black55"
                android:padding="8dp"
                android:src="@drawable/ic_location"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/text_gilroy_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="18dp"
            android:textColor="@color/blue_dark"
            android:text="Nama Depan" />

        <EditText
            android:id="@+id/etEmail"
            style="@style/text_proximanova_subContent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bgg_edt"
            android:elevation="18dp"
            android:outlineProvider="paddedBounds"
            android:outlineSpotShadowColor="@color/black60"
            android:paddingHorizontal="24dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/gray_dark"
            android:text="Jhon"
            android:textIsSelectable="true" />

        <TextView
            style="@style/text_gilroy_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="18dp"
            android:textColor="@color/blue_dark"
            android:text="Nama Belakang" />

        <EditText
            style="@style/text_proximanova_subContent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bgg_edt"
            android:elevation="18dp"
            android:outlineProvider="paddedBounds"
            android:outlineSpotShadowColor="@color/black60"
            android:paddingHorizontal="24dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/gray_dark"
            android:text="Doe"
            android:textIsSelectable="true" />

        <TextView
            style="@style/text_gilroy_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="18dp"
            android:textColor="@color/blue_dark"
            android:text="No. Telpon" />

        <EditText
            style="@style/text_proximanova_subContent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bgg_edt"
            android:elevation="18dp"
            android:outlineProvider="paddedBounds"
            android:outlineSpotShadowColor="@color/black60"
            android:paddingHorizontal="24dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/gray_dark"
            android:hint="Masukkan no telpon anda"
            android:textIsSelectable="true" />

        <TextView
            style="@style/text_gilroy_content2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="18dp"
            android:textColor="@color/blue_dark"
            android:text="No. KTP" />

        <EditText
            style="@style/text_proximanova_subContent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bgg_edt"
            android:elevation="18dp"
            android:outlineProvider="paddedBounds"
            android:outlineSpotShadowColor="@color/black60"
            android:paddingHorizontal="24dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/gray_dark"
            android:hint="masukkan no KTP anda"
            android:textIsSelectable="true" />

        <TextView
            style="@style/text_gilroy_subContent3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="18dp"
            android:drawableStart="@drawable/ic_annount"
            android:drawablePadding="12dp"
            android:layout_marginStart="12dp"
            android:text="Pastikan profile anda terisi dengan benar, \ndata pribadi anda terjamin keamanannya"
            android:textColor="@color/gray"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginVertical="32dp"
            android:layout_marginHorizontal="18dp"
            android:outlineProvider="paddedBounds"
            android:outlineSpotShadowColor="@color/black60"
            android:drawableEnd="@drawable/ic_save"
            android:drawableTint="@color/white"
            app:elevation="18dp"
            app:cornerRadius="8dp"
            android:text="Simpan Profile"/>
    </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_card2"
            app:layout_constraintTop_toBottomOf="@+id/linear1" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
